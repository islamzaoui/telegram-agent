{
	"name": "telegram-agent",
	"type": "module",
	"private": true,
	"packageManager": "bun@1.3.0",
	"module": "src/index.ts",
	"scripts": {
		"prepare": "husky",
		"dev": "bun --watch src/index.ts",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint",
		"lint:fix": "eslint --fix"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@ai-sdk/google": "^2.0.23",
		"ai": "^5.0.76",
		"gramio": "^0.4.11",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.0.0",
		"@types/bun": "latest",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"prettier": "^3.6.2"
	},
	"lint-staged": {
		"*": [
			"bun lint:fix",
			"bun format"
		]
	}
}
